@using BatteryOptima.Dto.BatteryCellDtos
@model List<ResultBatteryCellWithProducerDtos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CellDashboard/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hücre Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Hücreler ile ilgili detayları bu sayfadan inceleyebilir veya değiştirebilirsiniz.
                            function:
                            <code>$().DataTable();</code>.
                        </p>

                        <table id="basic-datatable" class="table dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Seri Numarası</th>
                                    <th>İç Direnç</th>
                                    <th>Gerilim</th>
                                    <th>Set Tarihi</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Detaylar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    
                                    <tr>
                                        <td>@item.CellSerialNo</td>
                                        <td>@item.InternalResistance</td>
                                        <td>@item.Voltage</td>
                                        <td>@item.DateOfMesurementDate</td>
                                        <td>@item.DateOfMesurementDate</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>
    </div>
</div>


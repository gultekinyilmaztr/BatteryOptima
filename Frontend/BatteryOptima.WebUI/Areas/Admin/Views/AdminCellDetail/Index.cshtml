@model List<ResultCellDetailByCellIdDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CellDashboard/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hücre Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Hücreler ile ilgili detayları bu sayfadan inceleyebilir veya değiştirebilirsiniz.
                            @*         function:
                            <code>$().DataTable();</code>. *@
                        </p>

                        <table id="basic-datatable" class="table dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Battery Cell ID</th>
                                    <th>Detaylar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.BatteryCellId</td>
                                        <td><a href="/Admin/AdminCell/RemoveBatteryCell/@item.BatteryCellId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminCell/UpdateCell/@item.BatteryCellId" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/Admin/AdminCellDetail/Index?id=@item.BatteryCellId" class="btn btn-outline-dark">Detaylar</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/AdminCell/CreateCell" class="btn btn-outline-primary">Yeni Hücre Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
